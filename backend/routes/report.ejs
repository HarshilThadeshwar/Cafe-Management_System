<html>
    <head>
        <style>
            table{
                font-family: Arial, Helvetica, sans-serif;
                border-collapse: collapse;
                width: 100%;
            }

            td,th{
                border: 1px solid #dddddd;
                text-align: left;
                padding: 8px;
            }
        </style>
    </head>

    <body>
        <h3 style="text-align: center;">
            SliverLeaf Cafe
        </h3>
        <table>
            <tr>
                <th>Name: <%= name%></th>
                <th>Email: <%= email%></th> 
            </tr>
            <tr>
                <th>Contact Number: <%= contactnumber%></th>
                <th>Payment Method: <%= paymentmethod%></th> 
            </tr>
            <tr>
                <th>Bill Date: <%= new Date().toLocaleDateString() %></th>
            </tr>
        </table>

        <h3>Your Order Details:</h3>
        <table>
            <tr>
                <th>Name</th>
                <th>Category</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Sub Total</th>
            </tr>
            <% if(productdetails.length > 0) { %>
                <% productdetails.forEach(product =>{ %>
                    <tr>
                        <td><%= product.name %></td>
                        <td><%= product.category %></td>
                        <td><%= product.quantity %></td>
                        <td>&#8377;<%= product.price %></td>
                        <td>&#8377;<%= product.total %></td>
                    </tr>
                <%});%>
                <%}%> 
        </table>
        <h3>Total: &#8377;<%= total%></h3>
        <h3>Thank you for visting. Please visit again!! </h3>
    </body>
</html>